<div class="item  col-xs-3 col-lg-3">
  <div class="thumbnail">


    <div class="item_image well grid-image">
      <%= image_tag asset_preview(:grid)  , class: "img-zoom", onerror: "this.onerror=null;this.src='../../assets/mine/missing100.png'"%>
    </div>

    <div class="caption">
       <h4 class="group inner list-group-item-heading"><%= @asset.title %></h4>
       <p class="group inner list-group-item-text">
         Author : <%= @asset.author %> <br/>
         Edition : <%= @asset.edition %> <br/>
         Language : <%= @asset.language %> <br/>
       </p>
       <div class="row">
            <div class="col-xs-12 col-md-6">
            </div>
            
            <div class="col-xs-12 col-md-6">
              <%= link_to "Make Offer", offers_path( "offer[to_id]": @asset.user.id, choosed_asset_id: @asset.id ), method: :post, class: "btn btn-success" %>
            </div>
        </div>
     </div>
   </div>
</div>